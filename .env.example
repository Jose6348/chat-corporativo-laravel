APP_NAME="Synkro Chat"
APP_ENV=local
APP_KEY= # gerar com: php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# ----------------------------
# BANCO DE DADOS
# ----------------------------
DB_CONNECTION=sqlsrv

# SQL Server
DB_SERVER=SEU_SERVIDOR_SQL # ex: localhost ou NOME-DO-PC
DB_PORT=1433
DB_NAME=chat_milani

DB_HOST=SEU_SERVIDOR_SQL    # se preferir usar esse formato
DB_DATABASE=chat_milani
DB_USERNAME=seu_usuario_sql
DB_PASSWORD=sua_senha_sql
DB_TRUST_SERVER_CERTIFICATE=true

# ----------------------------
# SESSÃO / CACHE / FILAS
# ----------------------------
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# ----------------------------
# PUSHER / BROADCAST
# ----------------------------
BROADCAST_CONNECTION=pusher

PUSHER_APP_ID=seu_pusher_app_id
PUSHER_APP_KEY=seu_pusher_app_key
PUSHER_APP_SECRET=seu_pusher_app_secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=us2

# Essas variáveis são usadas pelo Vite no front-end (Echo)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
VITE_PUSHER_SCHEME="https"

# ----------------------------
# ARQUIVOS / REDIS / ETC
# ----------------------------
FILESYSTEM_DISK=local

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ----------------------------
# E-MAIL (padrão)
# ----------------------------
MAIL_MAILER=smtp
MAIL_FROM_ADDRESS=nao-responda@chatmilani.com
MAIL_FROM_NAME="${APP_NAME}"

MAIL_HOST=smtp.seu_provedor.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@exemplo.com
MAIL_PASSWORD=sua_senha_ou_app_password
MAIL_ENCRYPTION=tls

# ----------------------------
# MAILERSEND
# ----------------------------
MAILERSEND_API_KEY=seu_mailersend_api_key

# Email verificado no MailerSend (use um email que você verificou na sua conta)
# MAIL_FROM_ADDRESS_VERIFIED=seu-email-verificado@exemplo.com

# ----------------------------
# AWS (não usado no momento)
# ----------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# ----------------------------
# FRONT-END
# ----------------------------
VITE_APP_NAME="${APP_NAME}"
